{
  "name": "hexo-theme-doc-site",
  "version": "0.0.0",
  "description": "Documentation site source for hexo-theme-doc package",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "ln -s ../node_modules/hexo-theme-doc ./themes/doc &>/dev/null || true",
    "generate": "hexo clean && hexo generate",
    "deploy": "NODE_DEBUG=gh-pages node deploy.js",
    "serve": "hexo server -s",
    "test": "nightwatch",
    "test:setup": "npm run -s webdriver-manager:install",
    "webdriver-manager": "webdriver-manager",
    "webdriver-manager:install": "webdriver-manager update --versions.chrome 2.33 --versions.standalone 3.7.1",
    "lint": "eslint tests --ext .js"
  },
  "hexo": {
    "version": "3.4.0"
  },
  "dependencies": {
    "hexo": "^3.3.8",
    "hexo-cli": "^1.0.3",
    "hexo-renderer-ejs": "^0.2.0",
    "hexo-renderer-less": "^0.2.0",
    "hexo-renderer-marked": "^0.2.10",
    "hexo-server": "^0.2.1",
    "hexo-theme-doc": "git+https://github.com/zalando-incubator/hexo-theme-doc.git"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "gh-pages": "^1.0.0",
    "nightwatch": "^0.9.16",
    "webdriver-manager": "^12.0.6"
  }
}